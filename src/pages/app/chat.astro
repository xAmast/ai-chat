import AppLayout from '@/theme/AppLayout.astro';
import ChatView from '@/apps/chat/main';

import { checkPass } from '@/shared/node/auth';

if (!checkPass(Astro.cookies.get('code').value)) {
  return Astro.redirect('/password', 302);
}
